uses uDMConexao;

{$R *.dfm}

procedure TovF_EM003p.ovB_PesquisaClick(Sender: TObject);
var
  SQLBase : string;
begin
  SQLBase := 'SELECT codusu, nomusu, cidusu, telusu FROM USUARIOS';
  case ovCB_CampoFiltro.ItemIndex of
  0: // codigo
  begin
    SQLBase:= SQLBase + 'Where codusu like "%'+ovE_Filtro.text+'%"';
  end;
  1: // nome
  begin
    SQLBase:= SQLBase + 'Where nomusu like "%'+ovE_Filtro.text+'%"';
  end;
  2: // cidade
  begin
    SQLBase:= SQLBase + 'Where cidusu like "%'+ovE_Filtro.text+'%"';
  end;
  3: // telefone
  begin
    SQLBase:= SQLBase + 'Where telusu like "%'+ovE_Filtro.text+'%"';
  end;
  end;
   //oSD_Pesquisa.Close;
   // oSD_Pesquisa.DataSet.CommandText := SQLBase;
    //oSD_Pesquisa.Open;

  oCDS_Usuario.Close;
  oCDS_Usuario.CommandText := SQLBase;
  oCDS_Usuario.Open;
  DBGrid1.SetFocus;
end;

procedure TovF_EM003p.ovE_FiltroKeyPress(Sender: TObject; var Key: Char);
begin
begin
  if key = #13 then // #13 é o símbolo que representa a tecla Enter
   begin
     if (ovCB_CampoFiltro.Text <> EmptyStr) and //Verifico se o comboBox foi preenchido
      (ovE_Filtro.Text <> EmptyStr) then //verifico se o edit possui algum valor
     begin
       With oCDS_Usuario do
       begin
         Close;
         CommandText:='select codusu, nomusu, telusu, cidusu from PESSOA Where '+
                      ovCB_CampoFiltro.Text+ ' LIKE '+QuotedStr(ovE_Filtro.Text+'%');
         Open;
       end;
     end;
   end;
 end;
end;

end.
